{
  "name": "ben-twitch-bot",
  "version": "1.0.0",
  "description": "A modern Twitch chat bot with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "twitch",
    "bot",
    "chat",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "tmi.js": "^1.8.5",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/tmi.js": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
